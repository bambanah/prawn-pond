{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@Components/*": [
				"components/*"
			],
			"@Pages/*": [
				"pages/*"
			],
			"@Hooks/*": [
				"hooks/*"
			],
			"@Shared/*": [
				"shared/*"
			],
			"@Styles/*": [
				"styles/*"
			],
			"@Utils/*": [
				"utils/*"
			],
			"@Schema/*": [
				"schema/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		".eslintrc.js"
	],
	"exclude": [
		"node_modules"
	]
}